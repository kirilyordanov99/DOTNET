@model SearchUsersViewModel

<h1>User Management</h1>

<form method="get" asp-controller="UserManagement" asp-action="Index">
    <input type="text" name="searchTerm" placeholder="Search by username or email" value="@Model.SearchTerm" />
    <button type="submit">Search</button>
</form>

<table>
    <tr>
        <th>Username</th>
        <th>Email</th>
        <th>Role</th>
        <th>Actions</th>
    </tr>
    @foreach (var user in Model.Users)
    {
        <tr>
            <td>@user.Username</td>
            <td>@user.Email</td>
            <td>@user.Role</td>
            <td>
                <a asp-controller="UserManagement" asp-action="Edit" asp-route-id="@user.Id">Edit</a>
                <a asp-controller="UserManagement" asp-action="Delete" asp-route-id="@user.Id">Delete</a>
            </td>
        </tr>
    }
</table>

@{
    if (Model.TotalPages > 1)
    {
        <div>
            Page:
            @for (var i = 1; i <= Model.TotalPages; i++)
            {
                <a asp-controller="UserManagement" asp-action="Index" asp-route-page="@i">@i</a>
            }
        </div>
    }
}
